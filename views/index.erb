<!DOCTYPE html>
<html>
  <body>
    <% if session[:message] %>
      <p><%= session.delete(:message) %></p>
    <% end %>

    <ul>
      <% @files.each do |file| %>
        <li>
          <a href='/<%= file %>'><%= file %></a> <br>
          <a href='/<%= file %>/edit'>Edit</a>    
          <br><br>    
        </li>
      <% end %>
    </ul>

  </body>
</html>

